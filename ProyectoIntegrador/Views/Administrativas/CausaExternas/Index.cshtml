    ViewBag.Title = "Index";
}

<h2>Causa Externa</h2>

<p>
    @Html.ActionLink("Crear nueva causa externa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
