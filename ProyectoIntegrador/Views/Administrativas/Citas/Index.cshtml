@model IEnumerable<ProyectoIntegrador.Models.DBModels.Cita>

@{
    ViewBag.Title = "Citas";
}

<h2>Citas</h2>

<p>
    @Html.ActionLink("Crear nueva Cita", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AfiliadoF.RecidenciaBarrio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultorioF.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicoF.RecidenciaBarrio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duracion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCrea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AfiliadoF.RecidenciaBarrio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsultorioF.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicoF.RecidenciaBarrio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
