@model IEnumerable<ProyectoIntegrador.Models.DBModels.Procedimiento>

@{
    ViewBag.Title = "Index";
}

<h2>Procedimientos</h2>

<p>
    @Html.ActionLink("Crear nuevo procedimiento", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CitaF.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ambito)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finalidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaRealiza)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CitaF.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ambito)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Finalidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaRealiza)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
