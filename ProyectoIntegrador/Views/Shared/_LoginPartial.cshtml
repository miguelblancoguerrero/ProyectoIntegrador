@using Microsoft.AspNet.Identity
@if (@Session["user"] != null && ((ProyectoIntegrador.Models.ApplicationUser)@Session["user"]).Id != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-light btn-sm">Cerrar sesión</a>
    }
}